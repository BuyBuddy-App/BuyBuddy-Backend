{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "esnext.asynciterable"] // Support async/await and other features used by Prisma.
  },
  "include": ["src/**/*", "generated/prisma", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
