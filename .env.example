# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
APP_NAME=BuyBuddy
BASE_URL=http://localhost:3000

# Database (connection pooling / direct for migrations)
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<POOL_HOST>:<POOL_PORT>/<DB_NAME>?pgbouncer=true
DIRECT_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>

# Email
EMAIL_FROM=BuyBuddy <no-reply@example.com>
TEMPLATES_PATH=src/services/email/templates

# SMTP / Mail provider (Mailtrap / SendGrid / etc.)
SMTP_URL=smtp://<SMTP_USER>:<SMTP_PASS>@<SMTP_HOST>:<SMTP_PORT>
SMTP_HOST=<SMTP_HOST>
SMTP_PORT=<SMTP_PORT>
SMTP_USER=<SMTP_USER>
SMTP_PASS=<SMTP_PASS>

# Gmail app password (if you use Gmail)
GMAIL_USER=<gmail_user@example.com>
GMAIL_PASSWORD=<gmail_app_password>

# TTLs
EMAIL_VERIFICATION_TTL_MINUTES=10
PASSWORD_RESET_TTL_MINUTES=10
ACTIVE_ACCOUNT_TTL_MINUTES=10

# JWT Configuration
ACCESS_TOKEN_SECRET=<ACCESS_TOKEN_SECRET>
ACCESS_TOKEN_EXPIRES_IN=10m
REFRESH_TOKEN_SECRET=<REFRESH_TOKEN_SECRET>
REFRESH_TOKEN_EXPIRES_IN=30d
RESET_TOKEN_SECRET=<RESET_TOKEN_SECRET>
RESET_TOKEN_EXPIRES_IN=10m
JWT_COOKIE_EXPIRES_IN=30
REFRESH_TOKEN_TTL_DAYS=30
RESET_TOKEN_TTL_MINS=10

# OAuth
GOOGLE_CLIENT_ID=<GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<GOOGLE_CLIENT_SECRET>
GOOGLE_CALLBACK_URL=${BASE_URL}/api/v1/auth/google/callback

# Firebase (service account)
FB_PROJECT_ID=<FIREBASE_PROJECT_ID>
# Use a multiline value or load from a file in deployment platform secrets
FB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n<REDACTED>\n-----END PRIVATE KEY-----"
FB_CLIENT_EMAIL=<FB_CLIENT_EMAIL>

# Cloudinary
CLOUDINARY_CLOUD_NAME=<CLOUDINARY_CLOUD_NAME>
CLOUDINARY_API_KEY=<CLOUDINARY_API_KEY>
CLOUDINARY_API_SECRET=<CLOUDINARY_API_SECRET>

# Redis (queues)
REDIS_QUEUE_URL=redis://default:<REDIS_PASSWORD>@<REDIS_HOST>:<REDIS_PORT>

# CORS - JSON-array style
ALLOWED_ORIGINS=["http://localhost:3000"]

AI_SEARCH_API_URL=https://api.example.com/search